#!/bin/bash

echo "Enter your commit message"
read message
echo "Enter your remote server"
read remote_server
echo "Cleaning repo"
find . -type f \( -name "*~" -o -name "*.gcda" -o -name "*.gcno" -o -name "#*#" \) -delete
echo "Adding files"
git add .
git commit -m "${message}"
git status
echo "Pushing data to remote server!!!"
git push -u origin ${remote_server}